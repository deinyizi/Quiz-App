<Window x:Class="Quiz.QuizInstruction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
         xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Quiz"
        mc:Ignorable="d"
        Title="QuizInstruction"  Height="800.263" Width="791.993" Top="0"
        AllowsTransparency="False" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

           <Grid RenderTransformOrigin="0.51,0.75" Grid.RowSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="Images/gquiz.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="20,0,0,757" Background="White" Height="Auto" BorderBrush="White" BorderThickness="-0" Width="63" Click="Button_Click">
                        <iconPacks:PackIconMaterial Kind="ArrowCollapseLeft"
                                                Foreground="Red"
                                                Width="50" Height="20"  RenderTransformOrigin="1.403,1" Margin="-8,0,0,0">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-0.49"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>

                    <Button Margin="20,0,0,757" Background="White" Height="Auto" BorderBrush="White" BorderThickness="-0" Width="63" Click="Button_Click_2">
                        <iconPacks:PackIconMaterial Kind="WindowMaximize"
                                                Foreground="Red"
                                                Width="50" Height="20"  RenderTransformOrigin="1.403,1" Margin="-8,10,0,0">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-0.49"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>

                    <Button Margin="20,0,0,757" Background="White" Height="Auto" BorderBrush="White" BorderThickness="0" Width="66" Click="Button_Click_3" >
                        <iconPacks:PackIconMaterial Kind="WindowClose"
                                                Foreground="Red"
                                                Width="50" Height="20"  RenderTransformOrigin="1.403,1" Margin="-8,10,0,0">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-0.49"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                </StackPanel>

                <StackPanel >

                <TextBlock x:Name="welcomeTextBox" Text=" WELCOME TO {SUBJECT} QUIZ."
                           FontWeight="Bold"
                           FontFamily="helvetica"
                           FontSize="30"
                           FontStyle="Italic"
                           Foreground="Black"
                           Margin="90,70,-59,-30"
                               HorizontalAlignment="Center" Width="569" Height="46"/>
                <TextBlock Text=" Please read the following instructions."
                           FontWeight="Light"
                           FontFamily="helvetica"
                           FontSize="30"
                           FontStyle="Italic"
                           Foreground="Black"
                           Margin="33,50,-59,-30"
                               HorizontalAlignment="Center" Width="626"/>
                <TextBlock Text="Quiz Instructions"
                           FontWeight="SemiBold"
                           FontFamily="helvetica"
                           FontSize="40"
                           FontStyle="Italic"
                           TextDecorations="underline"
                           Foreground="Black"
                           Margin="90,40,-59,-30"
                               HorizontalAlignment="Center" Width="569"/>
                <TextBlock 
                        Text = "The quizzes consists of questions carefully designed to help you self-assess your  comprehension of the information presented on the topics covered in the module.  Each question in the quiz is of multiple-choice format. Read each question carefully, and click on the button next to your response that is based on the information  covered on the topic in the module. Each correct or incorrect response will result in appropriate feedback immediately at the bottom of the screen. After responding to a question, click on the Next Question button at the bottom to go to the next question.  After responding to the 8th question,  click on Close on the top of the window to exit the quiz. If you retake the quiz, the questions and their respective responses will be randomized. The total score for the quiz is based on your responses to all questions. If you respond incorrectly  to a question or retake a question again and get the correct response, your quiz score will reflect it appropriately. However, your quiz will not be graded, if you skip a question or exit before responding to all the questions. You will have 10 minutes for each quiz."
                          
                           FontFamily="helvetica"
                           TextWrapping="Wrap"
                           FontSize="22"
                    
                           FontStyle="Italic"
                           Foreground="Black"
                           Margin="90,40,41,-30" Height="491"/>

                <Button Content="START QUIZ" Margin="20,20" Style="{StaticResource button1}" Height="50" Width="200" FontSize="20" Foreground="White" BorderBrush="#FF707070" FontWeight="Bold" Click="Button_Click_1">
                        <Button.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#FFFFB192" Offset="1"/>
                                <GradientStop Color="#D6FD1032" Offset="0.138"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
        </Grid>
    </Grid>

    </Grid>
</Window>
